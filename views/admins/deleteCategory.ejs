<%- include('../partials/admin/header.ejs') %>

      <div class="container-fluid">
        <div class="container-fluid">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title fw-semibold mb-4">Delete Category</h5>
              <div class="card">
                <div class="card-body">
                  <form id="form" action="" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="selectedCategoryUrl" class="form-label">Category</label>
                        <select class="form-select" name="selectedCategoryUrl" id="selectedCategoryUrl" onchange="takeValue()" required>
                          <option value="">Select a category</option>
                          <% category.forEach(function (category) { %>
                            <option value="<%= category.url %>">
                            <%= category.name %>
                            </option>
                            
                          <% }); %>
                        </select>
                        <input type="hidden" id="name" name="name" value="">
                      </div>
                    <button type="submit" class="btn btn-primary">Delete</button>
                  </form>
                </div>
              </div>
              
            </div>
          </div>
        </div>
      </div>
<script>
function takeValue() {
  let selected = document.getElementById("selectedCategoryUrl").value;
  document.getElementById("name").value = selected;
  document.getElementById("form").action = `/admins/deleteCategory/${selected}?_method=DELETE`;

}
</script>
